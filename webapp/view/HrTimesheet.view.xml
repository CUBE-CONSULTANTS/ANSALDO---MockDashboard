<mvc:View
    controllerName="ansaldonuclear.dashboard.controller.HrTimesheet"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    height="100%"
>
    <f:DynamicPage
        fitContent="true"
        toggleHeaderOnTitleClick="false"
    >
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Solid">
                <f:heading>
                    <l:HorizontalLayout
                        allowWrapping="true"
                        alignItems="Center"
                        justifyContent="Start"
                    >
                        <Button
                            icon="sap-icon://nav-back"
                            press=".onNavBack"
                            tooltip="{i18n>navBack}"
                        />
                        <Title
                            text="{i18n>HRTimesheet}"
                            level="H3"
                            wrapping="true"
                            class="sapUiSmallMarginBegin"
                        />
                    </l:HorizontalLayout>
                </f:heading>
                <f:actions>
                    <l:VerticalLayout>
                        <Image
                            src="public/images/ansaldo_nucleare_logo.jpg"
                            height="40px"
                            width="auto"
                        />
                    </l:VerticalLayout>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <l:ResponsiveSplitter defaultPane="masterPane">
                <l:PaneContainer>
                    <l:SplitPane
                        id="masterPane"
                        requiredParentWidth="320"
                    >
                        <l:layoutData>
                            <l:SplitterLayoutData
                                size="{sizes>/masterPaneSize}"
                            />
                        </l:layoutData>
                        <VBox
                            fitContainer="true"
                        >
                            <Button
                                icon="sap-icon://menu"
                                press=".onToggleMenu"
                                type="Emphasized"
                                class="sapUiTinyMarginBegin"
                            />
                            <tnt:NavigationList
                                id="navigationList"
                                width="100%"
                                expanded="{= ${sizes>/menuExpanded} }"
                                itemSelect=".onNavigationSelectionChange"
                                
                            >
                                <tnt:NavigationListItem
                                    text="{i18n>ccmd}"
                                    key="costCenterTs"
                                    icon="sap-icon://accounting-document-verification"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>wbeMd}"
                                    key="wbe"
                                    icon="sap-icon://process"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>netMd}"
                                    key="network"
                                    icon="sap-icon://share"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>prdoOMD}"
                                    key="prodOrder"
                                    icon="sap-icon://factory"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>atmd}"
                                    key="activityTypes"
                                    icon="sap-icon://activity-individual"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>ets}"
                                    key="ets"
                                    icon="sap-icon://employee"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>es4}"
                                    key="es4"
                                    icon="sap-icon://user-settings"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>eadp}"
                                    key="eadp"
                                    icon="sap-icon://shield"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>ccadp}"
                                    key="costCenterAdp"
                                    icon="sap-icon://business-card"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>salAcc}"
                                    key="salAcc"
                                    icon="sap-icon://money-bills"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>trackAct}"
                                    key="trackAct"
                                    icon="sap-icon://inspect"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>massupnet}"
                                    key="massupnet"
                                    icon="sap-icon://upload-to-cloud"
                                />
                                <tnt:NavigationListItem
                                    text="{i18n>massuppdstat}"
                                    key="massuppdstat"
                                    icon="sap-icon://synchronize"
                                />
                            </tnt:NavigationList>
                        </VBox>
                    </l:SplitPane>

                    <l:PaneContainer orientation="Vertical">
                        <l:SplitPane requiredParentWidth="600">
                            <l:layoutData>
                                <l:SplitterLayoutData
                                    size="{sizes>/detailPaneSize}"
                                />
                            </l:layoutData>
                            <Page
                                showNavButton="{main>/isDetail}"
                                id="detailPage"
                                title="{titleModel>/currentTitle}"
                                navButtonPress=".backPrevFragment"
                                navButtonTooltip="{i18n>navBack}"
                            >
                                <content />
                            </Page>
                        </l:SplitPane>
                    </l:PaneContainer>
                </l:PaneContainer>
            </l:ResponsiveSplitter>
        </f:content>

        <f:footer>
            <core:Fragment
                fragmentName="ansaldonuclear.dashboard.view.fragments.footer"
                type="XML"
            />
        </f:footer>
    </f:DynamicPage>
</mvc:View>
