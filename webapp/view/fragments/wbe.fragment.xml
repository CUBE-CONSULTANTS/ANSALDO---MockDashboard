<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ui="sap.ui.table"
>
<VBox direction="Column">
        <ui:Table

            selectionMode="None"
            width="100%"
            ariaLabelledBy="title"
            rows="{
            path: 'mockNetworkData>/wbeElements'
          }"
        >
            <ui:extension>
                <core:Fragment
                            fragmentName="ansaldonuclear.dashboard.view.fragments.toolbar"
                            type="XML"
                        />
            </ui:extension>
            <ui:columns>
                
                <ui:Column width="15rem">
                    <Label text="{i18n>wbeEl}" />
                    <ui:template>
                        <Text text="{mockNetworkData>PSPNR}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="15rem">
                    <Label text="{i18n>wbeStrEl}" />
                    <ui:template>
                        <Text text="{mockNetworkData>POSID}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="16rem">
                    <Label text="{i18n>shortDescr}" />
                    <ui:template>
                        <Text text="{mockNetworkData>POST1}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="15rem">
                    <Label text="{i18n>bStartDate}" />
                    <ui:template>
                        <DatePicker
                            value="{path: 'mockNetworkData>PSTRT', formatter: '.formatter.formatDate'}"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column width="15rem">
                    <Label text="{i18n>bFinishDate}" />
                    <ui:template>
                        <DatePicker
                            value="{path: 'mockNetworkData>PENDE', formatter: '.formatter.formatDate'}"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    width="10rem"
                    hAlign="Center"
                >
                    <Label text="{i18n>status}" />
                    <ui:template>
                        <Text text="{mockNetworkData>STTXT_EXT}" />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    width="10rem"
                    hAlign="Center"
                >
                    <Label text="{i18n>opera}" />
                    <ui:template>
                        <Text text="{mockNetworkData>OPERA}" />
                    </ui:template>
                </ui:Column>
                
            </ui:columns>
        </ui:Table>
    </VBox>
</core:FragmentDefinition>