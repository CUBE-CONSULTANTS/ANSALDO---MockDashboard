<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ui="sap.ui.table"
>
<VBox direction="Column">
        <ui:Table

            selectionMode="None"
            width="100%"
            ariaLabelledBy="title"
            rows="{
            path: 'mockNetworkData>/employeesTS'
          }"
        >
            <ui:extension>
                <core:Fragment
                            fragmentName="ansaldonuclear.dashboard.view.fragments.toolbar"
                            type="XML"
                        />
            </ui:extension>
            <ui:columns>

                <ui:Column width="9rem">
                    <Label text="{i18n>personId}" />
                    <ui:template>
                        <Text text="{mockNetworkData>personIdExternal}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="10rem">
                    <Label text="{i18n>firstName}" />
                    <ui:template>
                        <Text text="{mockNetworkData>firstName}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="10rem">
                    <Label text="{i18n>lastName}" />
                    <ui:template>
                        <Text text="{mockNetworkData>lastName}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="12rem">
                    <Label text="{i18n>title}" />
                    <ui:template>
                        <Text text="{mockNetworkData>title}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="11rem">
                    <Label text="{i18n>dateOfBirth}" />
                    <ui:template>
                        <DatePicker
                            value="{ path: 'mockNetworkData>dateOfBirth', formatter: '.formatter.formatDate' }"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>

                <ui:Column width="6rem">
                    <Label text="{i18n>gender}" />
                    <ui:template>
                        <Text text="{mockNetworkData>gender}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="10rem">
                    <Label text="{i18n>status}" />
                    <ui:template>
                        <Text text="{mockNetworkData>status}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="16rem">
                    <Label text="{i18n>emailAddress}" />
                    <ui:template>
                        <Text text="{mockNetworkData>emailAddress}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="12rem">
                    <Label text="{i18n>companyEntryDate}" />
                    <ui:template>
                        <DatePicker
                            value="{ path: 'mockNetworkData>companyEntryDate', formatter: '.formatter.formatDate' }"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>

                <ui:Column width="10rem">
                    <Label text="{i18n>managerId}" />
                    <ui:template>
                        <Text text="{mockNetworkData>managerId}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="12rem">
                    <Label text="{i18n>hireDate}" />
                    <ui:template>
                        <DatePicker
                            value="{ path: 'mockNetworkData>hireDate', formatter: '.formatter.formatDate' }"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>

                <ui:Column width="12rem">
                    <Label text="{i18n>terminationDate}" />
                    <ui:template>
                        <DatePicker
                            value="{ path: 'mockNetworkData>terminationDate', formatter: '.formatter.formatDate' }"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>

                <ui:Column width="12rem">
                    <Label text="{i18n>employmentType}" />
                    <ui:template>
                        <Text text="{mockNetworkData>employmentType}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="7rem" hAlign="Center">
                    <Label text="{i18n>isFulltimeEmployee}" />
                    <ui:template>
                        <CheckBox selected="{mockNetworkData>isFulltimeEmployee}" editable="false" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="12rem">
                    <Label text="{i18n>employeeClass}" />
                    <ui:template>
                        <Text text="{mockNetworkData>employeeClass}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="9rem">
                    <Label text="{i18n>overtimePayed}" />
                    <ui:template>
                        <Text text="{mockNetworkData>overtimePayed}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="7rem">
                    <Label text="{i18n>fte}" />
                    <ui:template>
                        <Text text="{mockNetworkData>fte}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="12rem">
                    <Label text="{i18n>department}" />
                    <ui:template>
                        <Text text="{mockNetworkData>department}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="10rem">
                    <Label text="{i18n>legalEntity}" />
                    <ui:template>
                        <Text text="{mockNetworkData>legalEntity}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="12rem">
                    <Label text="{i18n>phoneNumber}" />
                    <ui:template>
                        <Text text="{mockNetworkData>phoneNumber}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="12rem">
                    <Label text="{i18n>location}" />
                    <ui:template>
                        <Text text="{mockNetworkData>location}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="10rem">
                    <Label text="{i18n>costCenter}" />
                    <ui:template>
                        <Text text="{mockNetworkData>costCenter}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="12rem">
                    <Label text="{i18n>standardHours}" />
                    <ui:template>
                        <Text text="{mockNetworkData>standardHours}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="9rem">
                    <Label text="{i18n>jobCode}" />
                    <ui:template>
                        <Text text="{mockNetworkData>jobCode}" />
                    </ui:template>
                </ui:Column>

                <ui:Column width="8rem" hAlign="Center">
                    <Label text="{i18n>opera}" />
                    <ui:template>
                        <Text text="{mockNetworkData>OPERA}" />
                    </ui:template>
                </ui:Column>

            </ui:columns>
        </ui:Table>
    </VBox>
</core:FragmentDefinition>