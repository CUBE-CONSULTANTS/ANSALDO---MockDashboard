<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:ui="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
>
    <VBox direction="Column">
        <ui:Table
            selectionMode="None"
            width="100%"
            ariaLabelledBy="title"
            rows="{
            path: 'mockNetworkData>/mockData'
          }"
        >
            <ui:extension>
                <OverflowToolbar style="Clear">
                    <ToolbarSpacer />
                    <Button icon="sap-icon://filter" tooltip="{i18n>filter}"/>
                    <Button icon="sap-icon://sort" tooltip="{i18n>sort}" />
                    <Button icon="sap-icon://excel-attachment" tooltip="{i18n>sort}" />
                </OverflowToolbar>
            </ui:extension>
            <ui:columns>
                <ui:Column width="4rem">
                    <ui:template>
                        <Button
                            tooltip="{i18n>detail}"
                            icon="sap-icon://detail-view"
                            type="Emphasized"
                            press="onOpenDetail"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column>
                    <Label text="{i18n>networkNumber}" />
                    <ui:template>
                        <Text text="{mockNetworkData>AUFNR}" />
                    </ui:template>
                </ui:Column>

                <ui:Column>
                    <Label text="{i18n>description}" />
                    <ui:template>
                        <Text text="{mockNetworkData>KTEXT}" />
                    </ui:template>
                </ui:Column>

                <ui:Column>
                    <Label text="{i18n>wbeParent}" />
                    <ui:template>
                        <Text text="{mockNetworkData>PSPNR}" />
                    </ui:template>
                </ui:Column>

                <ui:Column>
                    <Label text="{i18n>bStartDate}" />
                    <ui:template>
                        <DatePicker
                            value="{path: 'mockNetworkData>GSTRP', formatter: '.formatter.formatDate'}"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column>
                    <Label text="{i18n>bFinishDate}" />
                    <ui:template>
                        <DatePicker
                            value="{path: 'mockNetworkData>GLTRP', formatter: '.formatter.formatDate'}"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    width="8rem"
                    hAlign="Center"
                >
                    <Label text="{i18n>opera}" />
                    <ui:template>
                        <Text text="{mockNetworkData>OPERA}" />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    width="6rem"
                    hAlign="Center"
                >
                    <Label text="{i18n>status}" />
                    <ui:template>
                        <Button
                            type="{=${mockNetworkData>OPERA} === 'INS' ? 'Neutral': 'Attention'}"
                            icon="{=${mockNetworkData>OPERA} === 'INS' ? 'sap-icon://create': 'sap-icon://edit'}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column>
                    <Label text="{i18n>dateOp}" />
                    <ui:template>
                        <DatePicker
                            value="{path: 'mockNetworkData>DATEOP', formatter: '.formatter.formatDate'}"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>
            </ui:columns>
        </ui:Table>
    </VBox>
</core:FragmentDefinition>
