<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:ui="sap.ui.table"
>
    <VBox direction="Column">
        <ui:Table
            id="orderTable"
            selectionMode="None"
            width="100%"
            rows="{
                path: 'mockNetworkData>/orderHeaders'
            }"
        >
            <ui:extension>
                <core:Fragment
                    fragmentName="ansaldonuclear.dashboard.view.fragments.toolbar"
                    type="XML"
                />
            </ui:extension>

            <ui:columns>
                <ui:Column width="4rem" hAlign="Center">
                    <ui:template>
                        <Button
                            tooltip="{i18n>detail}"
                            icon="sap-icon://detail-view"
                            type="Emphasized"
                            press="onOpenDetail"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column width="11rem" >
                    <Label text="{i18n>OrderNumber}" />
                    <ui:template>
                        <Text text="{mockNetworkData>AUFNR}" />
                    </ui:template>
                </ui:Column>
                <ui:Column width="11rem">
                    <Label text="{i18n>description}" />
                    <ui:template>
                        <Text text="{mockNetworkData>KTEXT}" />
                    </ui:template>
                </ui:Column>
                <ui:Column width="11rem">
                    <Label text="{i18n>OrderType}" />
                    <ui:template>
                        <Text text="{mockNetworkData>AUART}" />
                    </ui:template>
                </ui:Column>
                <ui:Column width="11rem">
                    <Label text="{i18n>status}" />
                    <ui:template>
                        <Text text="{mockNetworkData>STTXT}" />
                    </ui:template>
                </ui:Column>
                <ui:Column width="11rem">
                    <Label text="{i18n>Plant}" />
                    <ui:template>
                        <Button text="{mockNetworkData>WERKS}" press=".onPlantLinkPress" />
                    </ui:template>
                </ui:Column>
                <ui:Column width="11rem">
                    <Label text="{i18n>Material}" />
                    <ui:template>
                        <Text text="{mockNetworkData>PLNBEZ}" />
                    </ui:template>
                </ui:Column>
                <ui:Column width="11rem">
                    <Label text="{i18n>TotalQty}" />
                    <ui:template>
                        <Text text="{mockNetworkData>GAMNG}" />
                    </ui:template>
                </ui:Column>
                <ui:Column width="11rem">
                    <Label text="{i18n>DeliveredQty}" />
                    <ui:template>
                        <Text text="{mockNetworkData>GWEMG}" />
                    </ui:template>
                </ui:Column>
                <ui:Column width="11rem">
                    <Label text="{i18n>StartDate}" />
                    <ui:template>
                       
                          <DatePicker
                            value="{path: 'mockNetworkData>GSTRP', formatter: '.formatter.formatDate'}"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column width="11rem">
                    <Label text="{i18n>EndDate}" />
                    <ui:template>
                          <DatePicker
                            value="{path: 'mockNetworkData>GLTRP', formatter: '.formatter.formatDate'}"
                            editable="false"
                            displayFormat="dd/MM/yyyy"
                        />
                    </ui:template>
                </ui:Column>
            </ui:columns>
        </ui:Table>
    </VBox>
</core:FragmentDefinition>
