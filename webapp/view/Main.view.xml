<mvc:View
    controllerName="ansaldonuclear.dashboard.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
>
    <f:DynamicPage
        fitContent="true"
        toggleHeaderOnTitleClick="false"
        showFooter="true"
    >
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Solid">
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:actions>
                    <layout:HorizontalLayout allowWrapping="true">
                        <layout:VerticalLayout>
                            <Image
                                src="public/images/ansaldo_nucleare_logo.jpg"
                                height="40.00000000px"
                                width="100%"
                            />
                        </layout:VerticalLayout>
                    </layout:HorizontalLayout>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                pinnable="false"
                backgroundDesign="Solid"
            />
        </f:header>
        <!-- DynamicPage Content -->
        <f:content>
            <IconTabBar
                applyContentPadding="false"
                headerMode="Inline"
                id="idIconTabBar"
                select=".onSelectTab"
                selectedKey="03"
                expandable="false"
                stretchContentHeight="true"   
                             
            >
                <items>
                    <IconTabFilter
                        icon="sap-icon://timesheet"
                        iconColor="Default"
                        text="{i18n>ccts}"
                        key="01"
                    >
                        
                    </IconTabFilter>
                    <IconTabFilter
                        icon="sap-icon://workflow-tasks"
                        iconColor="Default"
                        text="{i18n>wbe}"
                        key="02"
                    />
                    <IconTabFilter
                        icon="sap-icon://connected"
                        iconColor="Default"
                        text="{i18n>network}"
                        key="03"
                    >
                        <core:Fragment
                            fragmentName="ansaldonuclear.dashboard.view.fragments.network"
                            type="XML"
                        />
                    </IconTabFilter>

                    <IconTabFilter
                        icon="sap-icon://factory"
                        iconColor="Default"
                        text="{i18n>prodOrder}"
                        key="04"
                    />
                    <IconTabFilter
                        icon="sap-icon://activity-items"
                        iconColor="Default"
                        text="{i18n>activityTypes}"
                        key="05"
                    />
                    <IconTabFilter
                        icon="sap-icon://capital-projects"
                        iconColor="Default"
                        text="{i18n>ccadp}"
                        key="06"
                    />
                </items>

                <content />
            </IconTabBar>
        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
            <core:Fragment
                fragmentName="ansaldonuclear.dashboard.view.fragments.footer"
                type="XML"
            />
        </f:footer>
    </f:DynamicPage>
</mvc:View>
