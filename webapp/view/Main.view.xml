<mvc:View
    controllerName="ansaldonuclear.dashboard.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
>
    <f:DynamicPage
        fitContent="true"
        toggleHeaderOnTitleClick="false"
        showFooter="true"
    >
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Solid">
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:actions>
                    <layout:HorizontalLayout allowWrapping="true">
                        <layout:VerticalLayout>
                            <Image
                                src="public/images/ansaldo_nucleare_logo.jpg"
                                height="40.00000000px"
                                width="100%"
                            />
                        </layout:VerticalLayout>
                    </layout:HorizontalLayout>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                pinnable="false"
                backgroundDesign="Solid"
            />
        </f:header>
        <!-- DynamicPage Content -->
        <f:content>
            <FlexBox
                justifyContent="SpaceBetween"
                alignItems="Center"
                direction="Row"
                width="100%"
                height="70%"
            >
                <items>
                    <GenericTile
                        header="{i18n>manufacturing}"
                        backgroundColor="#0d8cb1"
                        mode="IconMode"
                        tileIcon="sap-icon://factory"
                        width="300px"
                    >
                        <actionButtons />
                        <linkTileContents />
                        <tileContent />
                    </GenericTile>
                    <GenericTile
                        header="{i18n>finance}"
                        backgroundColor="#0d8cb1"
                        mode="IconMode"
                        tileIcon="sap-icon://business-objects-experience"
                        width="300px"
                    >
                        <actionButtons />
                        <linkTileContents />
                        <tileContent />
                    </GenericTile>
                    <GenericTile
                        header="{i18n>projSyst}"
                        backgroundColor="#0d8cb1"
                        mode="IconMode"
                        tileIcon="sap-icon://journey-change"
                        width="300px"
                    >
                        <actionButtons />
                        <linkTileContents />
                        <tileContent />
                    </GenericTile>
                    <GenericTile
                    
                        header="{i18n>HRTimesheet}"
                        backgroundColor="#0d8cb1"
                        mode="IconMode"
                        tileIcon="sap-icon://hr-approval"
                        width="300px"
                        press="onNavigateToHrTS"
                        
                    />
                </items>
            </FlexBox>
        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
            <core:Fragment
                fragmentName="ansaldonuclear.dashboard.view.fragments.footer"
                type="XML"
            />
        </f:footer>
    </f:DynamicPage>
</mvc:View>
