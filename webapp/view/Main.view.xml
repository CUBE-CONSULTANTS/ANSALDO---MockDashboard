<mvc:View
    controllerName="ansaldonuclear.dashboard.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
>
    <f:DynamicPage
        fitContent="true"
        toggleHeaderOnTitleClick="false"
        showFooter="true"
    >
        <!-- Header -->
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Solid">
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:actions>
                    <layout:HorizontalLayout allowWrapping="true">
                        <layout:VerticalLayout>
                            <Image
                                src="public/images/ansaldo_nucleare_logo.jpg"
                                height="40px"
                                width="auto"
                            />
                        </layout:VerticalLayout>
                    </layout:HorizontalLayout>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <!-- Empty header section -->
        <f:header>
            <f:DynamicPageHeader pinnable="false" backgroundDesign="Solid" />
        </f:header>

        <!-- Responsive content -->
        <f:content>
            <FlexBox
           wrap="Wrap"
            justifyContent="Center"
            alignItems="Center"
            class="sapUiResponsiveMargin"
            >
                <!-- Tile: Manufacturing -->
                <GenericTile
                    header="{i18n>manufacturing}"
                    tileIcon="sap-icon://factory"
                    press=".onNavigateToManufacturing"
                    mode="IconMode"
                    minWidth="200px"
                    class="sapUiResponsiveMargin"
                    backgroundColor="#0097A2"
                />
                
                <!-- Tile: Finance -->
                <GenericTile
                    header="{i18n>finance}"
                    tileIcon="sap-icon://business-objects-experience"
                    press=".onNavigateToFinance"
                    mode="IconMode"
                    minWidth="200px"
                    class="sapUiResponsiveMargin"
                    backgroundColor="#0097A2"
                />
                
                <!-- Tile: Project Systems -->
                <GenericTile
                    header="{i18n>projSyst}"
                    tileIcon="sap-icon://journey-change"
                    press=".onNavigateToProjSys"
                    mode="IconMode"
                    minWidth="200px"
                    class="sapUiResponsiveMargin"
                    backgroundColor="#0097A2"
                />
                
                <!-- Tile: HR Timesheet -->
                <GenericTile
                    header="{i18n>HRTimesheet}"
                    tileIcon="sap-icon://hr-approval"
                    press=".onNavigateToHrTS"
                    mode="IconMode"
                    minWidth="200px"
                    class="sapUiResponsiveMargin"
                    backgroundColor="#0097A2"
                />
            </FlexBox>
        </f:content>

        <!-- Footer -->
        <f:footer>
            <core:Fragment
                fragmentName="ansaldonuclear.dashboard.view.fragments.footer"
                type="XML"
            />
        </f:footer>
    </f:DynamicPage>
</mvc:View>
